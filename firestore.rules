rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isReceptionist() {
      return isAuthenticated() &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'receptionist';
    }

    // Queue counter - open for local development
    match /queueCounter/{date} {
      allow read: if true;
      allow write: if true; // Open for local development (restrict in production)
    }

    // Patients collection
    match /patients/{patientId} {
      // Anyone can read patients (for TV display, kiosk status)
      allow read: if true;

      // Allow creation for local development (restrict in production)
      allow create: if true;

      // Allow updates for patient registration and receptionist management
      allow update: if true;

      // Allow deletion for local development
      allow delete: if true;
    }

    // Rooms collection
    match /rooms/{roomId} {
      // Anyone can read rooms (for TV display)
      allow read: if true;

      // Open for local development (restrict in production)
      allow create, update, delete: if true;
    }

    // Users collection (for receptionist authentication)
    match /users/{userId} {
      allow read: if true; // Open for local development
      allow write: if true; // Open for local development
    }

    // Print jobs (for tracking print status)
    match /printJobs/{jobId} {
      allow read: if true;
      allow create: if true; // Open for local development
      allow update, delete: if true; // Open for local development
    }
  }
}
